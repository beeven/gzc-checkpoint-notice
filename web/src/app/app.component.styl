.header 
    width: 100%
    text-align: center
    background: #000000
    padding:0
    margin: 0
    display: flex
    align-items: center
    justify-content:center

    img 
        width: 100%
        display: block
        max-width: 768px
        flex: 1

.query-form
    padding-top 10px

.countdown-timer
    text-align: center
    font-size 12px
    padding-left 5px
    font-family: 'Arial'

.content-container
    height 100%
    display flex
    flex-direction column

    .list-row
        flex-grow 1
        overflow-y scroll



@keyframes rainbow-color {
    0% { color: red}
    25% { color: green}
    50% { color: blue}
    75% { color: purple}
    100% {color: red}
}

ul.notice-list
    list-style: none
    padding 0
    margin 0
    li
        border-bottom: 1px solid #aaa
        padding: 5px 3%
        &:nth-child(2n+1)
            background-color: #ededed

        .notice-header
            font-weight: bold
            display: flex
            align-content: center
            align-items: center
            justify-content: space-between

        &:first-child .notice-content
            font-weight bold
            animation rainbow-color linear 5s infinite